{
  "tests": [
    {
      "name": "Login existing user",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "access_token": "string",
        "refresh_token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Forgot password with nonexistent email",
      "method": "POST",
      "path": "/?action=forgot-password",
      "body": {
        "email": "nonexistent_xyz_test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password with invalid token",
      "method": "POST",
      "path": "/?action=reset-password",
      "body": {
        "token": "invalid_token",
        "password": "newpassword123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}