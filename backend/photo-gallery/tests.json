{
  "tests": [
    {
      "name": "Get photo gallery list",
      "method": "GET",
      "path": "/?action=list",
      "headers": {
        "X-Authorization": "Bearer valid_token"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "photos": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Upload photo to gallery",
      "method": "POST",
      "path": "/?action=upload",
      "headers": {
        "X-Authorization": "Bearer valid_token"
      },
      "body": {
        "image": "base64_encoded_image",
        "position": 0
      },
      "expectedStatus": 200,
      "expectedBody": {
        "photo": "object"
      },
      "bodyMatcher": "partial"
    }
  ]
}
